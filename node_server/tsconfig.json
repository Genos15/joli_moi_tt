{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./bin",
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@config/*": [
        "src/configuration/*"
      ],
      "@api/*": [
        "src/api/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
